extends layout

block content
	script(src="menu.js" type="text/javascript")
	link(rel="stylesheet", href="style.css")
	div.row
		div.col-md-2
		ul.col-md-9#sortable.list
			h2 Preferences
			each combo, index in menu
				li.thumbnail.col-md-9
					div.float_left.col-md-11
						h3.caption= combo.comboID
						p= combo.mainCourse 
						p= combo.drinks
					div.col-md-1
						div#priority_up.btn-lg
							a(href='#').reorder-up
								span(class="glyphicon glyphicon-chevron-up" aria-hidden="true")
						div#priority_down.btn-lg
							a(href='#').reorder-down
								span(class="glyphicon glyphicon-chevron-down" aria-hidden="true")
	div.row
		div.col-md-2
		div.col-md-6
			h2 Contact Details
			form(method='post')
				input(name='name', class='col-md-6 input-block-level form-control', placeholder='Name') 
				br
				br
				input(name='contactNumber', class='col-md-6 input-block-level form-control', placeholder='Contact No.') 
				br
				br
				input(name='emailId', class='col-md-6 input-block-level form-control', placeholder='Email ID') 
				br
				br
				input(name='companyName', class='col-md-6 input-block-level form-control', placeholder='Company') 
				br
				br
				br
				input(type='submit', class='btn btn-primary', value='Order')